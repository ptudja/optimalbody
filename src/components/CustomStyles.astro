---
// import '@fontsource-variable/inter';
import '@fontsource-variable/nunito';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Nunito Variable';
    --aw-font-serif: 'Nunito Variable';
    --aw-font-heading: 'Nunito Variable';

    --aw-color-primary: #9c7bb6; /* Lavender */
    --aw-color-secondary: #77c4b9; /* Soft desaturated teal (cool & grounding) */
    --aw-color-accent: #C49FD9;   /* Muted plum */

    --aw-color-text-heading: #2E1F3D; /* Deep lavender text */
    --aw-color-text-default: #4A3B57;
    --aw-color-text-muted: rgba(74, 59, 87, 0.66);

    --aw-color-bg-page: #fdf8ff;
    --aw-color-bg-page-dark: #1B1124;
  
    ::selection {
      background-color: #E5D4F3; /* Soft lavender highlight */
    }
  }

  .dark {
    --aw-font-sans: 'Nunito Variable';
    --aw-font-serif: 'Nunito Variable';
    --aw-font-heading: 'Nunito Variable';

    --aw-color-primary: #BFA8D9; /* Lighter lavender */
    --aw-color-secondary: #9D7EB3;
    --aw-color-accent: #D6BAEC;

    --aw-color-text-heading: #F4FAFF; /* Soft light on dark */
    --aw-color-text-default: #E0DDF0;
    --aw-color-text-muted: rgba(224, 221, 240, 0.66);

    --aw-color-bg-page: #1B1124; /* Deep muted violet-black */

    ::selection {
      background-color: #533B6E; /* Rich lavender selection */
      color: #F4FAFF;
    }
  }
</style>
