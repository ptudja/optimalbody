---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import {getPermalink} from "../utils/permalinks";

const metadata = {
  title: 'Optimal Body — Mjesto gdje pokret postaje put prema zdravijem, snažnijem i uravnoteženijem tijelu',
  ignoreTitleTemplate: true,
};

const loginLink = 'https://optimalbody.wod.guru/user/login';
const classLink = 'https://optimalbody.wod.guru/classes';
const registrationLink = 'https://optimalbody.wod.guru/registration';
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Prijavi se',
        href: loginLink,
        target: '_blank',
        icon: 'tabler:writing',
      },
      { text: 'Saznajte više', href: '#features' },
    ]}
    image={{ src: '~/assets/images/optimal-body-logo.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Pokretom prema zdravijem, snažnijem i uravnoteženom tijelu uz <br>
      <span class="text-accent dark:text-white">Optimal Body</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Kod nas, <span class="font-semibold text-page">optimal</span> znači nešto više od standardnog pristupa – to znači razumjeti vaše tijelo, poštovati njegove mogućnosti i zajedno raditi na ciljevima koji su vam važni.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Filozofija:" description="Osobni pristup, komunikacija, sigurnost pokreta" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Glavne Značajke"
    title="Šta dobivate s Optimal Body?"
    subtitle="Svaki naš program pažljivo je osmišljen prema vašim individualnim potrebama. Naš cilj nije samo dobar trening – nego dugoročna promjena, kroz znanje, povjerenje i stručno vođenje."
    items={[
      {
        title: 'Stručni tim kineziologa i licenciranih instruktora',
        description:
          'Vježbate pod nadzorom educiranog stručnjaka — sigurna tehnika, prilagodbe i jasne upute u svakom ponavljanju.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Reformer i vrhunska oprema',
        description:
          'Kontrolirani otpor omogućuje precizne, učinkovite pokrete za snažnije i pokretljivije tijelo uz minimalno opterećenje zglobova.',
        icon: 'tabler:yoga',
      },
      {
        title: 'Male grupe i 1-na-1 fokus',
        description:
          'Ograničen broj polaznika znači više pažnje, korekcija i motivacije — svaki trening je “po mjeri”.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Mjerljiv napredak i jasni ciljevi',
        description:
          'Postavljamo konkretne ciljeve, pratimo napredak i po potrebi prilagođavamo program kako biste stalno napredovali.',
        icon: 'tabler:trending-up',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Programi"
    title="Reformer, Funkcionalni, Pilates & Kineziterapija, programi snage i mobilnosti"
    items={[
      {
        title: 'Pokretljivost i stabilnost',
        icon: 'tabler:stretching',
        description:
          'Sustavno povećavamo opseg pokreta i kontrolu nad tijelom, jačamo duboke mišiće trupa i korigiramo držanje — vidljivo u svakodnevnim pokretima i stavu.',
      },
      {
        title: 'Oslobađanje od bolova i brži oporavak',
        icon: 'tabler:first-aid-kit',
        description:
          'Smanjujemo bolove u mišićima i zglobovima te ubrzavamo povratak funkciji nakon ozljeda ili operacija — idealno za osobe s kroničnim bolovima, posebno u leđima i vratu.',
      },
      {
        title: 'Prevencija ozljeda i sportski napredak',
        icon: 'tabler:shield-check',
        description:
          'Gradimo čvrstu bazu snage i stabilnosti kako biste spriječili ozljede i podigli performanse — posebno korisno sportašima i svima koji žele funkcionalnije, usklađenije tijelo.',
      },
    ]}
    image={{
      src: '~/assets/images/ob-1.jpg',
      alt: 'dns image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-3xl mb-1">Kineziterapija/DNS</h3>
      Kineziterapija je terapija pokretom koja pomaže u rehabilitaciji ozljeda, poboljšanju pokretljivosti i jačanju oslabljenih mišića. 
      DNS (Dinamička Neuromuskularna Stabilizacija) usredotočuje se na pravilnu aktivaciju dubokih mišića trupa i stabilizaciju tijela, 
      temeljeći se na prirodnom razvoju pokreta. 
      Ova kombinacija metoda učinkovito pomaže kod problema s držanjem, boli u leđima i prevenciji ozljeda.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-amber-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Snažan trup i bolje držanje',
        icon: 'tabler:body-scan',
        description: `Jačamo duboke mišiće trupa, korigiramo držanje i smanjujemo bolove — sigurno i prilagođeno svakome tko želi ojačati tijelo i držati se uspravnije.`,
      },
      {
        title: 'Fleksibilnost, ravnoteža i manje stresa',
        icon: 'tabler:stretching',
        description:
          'Povećavamo fleksibilnost i ravnotežu uz kontrolirane, smirene pokrete koji snižavaju stres i podižu opću kondiciju.',
      },
      {
        title: 'Siguran oporavak za sve razine',
        icon: 'tabler:physotherapist',
        description:
          "Pristup koji je nježan, ali učinkovit — idealan za osobe u oporavku od ozljeda, kao i za sve dobi i razine kondicije.",
      },
    ]}
    image={{
      src: '~/assets/images/ob-2.jpg',
      alt: 'pilates image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-3xl mb-1">Pilates</h3>
      Pilates je metoda vježbanja usmjerena na jačanje dubokih mišića trupa, poboljšanje fleksibilnosti, 
      ravnoteže i pravilnog držanja tijela. Kroz kontrolirane i precizne pokrete, pilates pomaže u razvoju snage,
      povećava pokretljivost zglobova te smanjuje napetost i bolove u leđima i vratu. Također doprinosi opuštanju i smanjenju stresa.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-amber-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Kontrolirana snaga bez opterećenja zglobova',
        icon: 'tabler:gymnastics',
        description:
          'Povećavamo mišićnu snagu uz podesiv otpor reformera — učinkovito za početnike i napredne, bez nepotrebnog stresa na zglobove.',
      },
      {
        title: 'Bolje držanje i zdravija leđa',
        icon: 'tabler:hexagon-plus',
        description:
          'Radimo na pravilnom poravnanju i aktivaciji dubokih mišića trupa kako bismo korigirali držanje i ublažili bolove u leđima.',
      },
      {
        title: 'Koordinacija, stabilnost i siguran oporavak',
        icon: 'tabler:bounce-right',
        description:
          'Precizni, vođeni pokreti poboljšavaju koordinaciju i stabilnost te podržavaju rehabilitaciju — idealno i za sportaše.',
      },
    ]}
    image={{
      src: '~/assets/images/ob-3.jpg',
      alt: 'reformer image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-3xl mb-1">Reformer</h3>
      Reformer je specijalizirana pilates sprava koja koristi opruge i kliznu platformu za pružanje prilagođenog 
      otpora tijekom vježbanja. Ovaj sustav omogućava preciznu kontrolu pokreta, ciljano jačanje dubokih mišićnih 
      skupina te značajno poboljšava fleksibilnost, ravnotežu i držanje tijela.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-amber-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Snaga i izdržljivost za svakodnevicu',
        icon: 'tabler:barbell',
        description: `Vježbe koje oponašaju dizanje, savijanje, okretanje i hod — gradimo mišićnu snagu i izdržljivost primjenjivu u stvarnim situacijama.`,
      },
      {
        title: 'Stabilnost i ravnoteža u pokretu',
        icon: 'tabler:scale',
        description:
          'Aktiviramo stabilizatore i jačamo kontrolu tijela kako bismo poboljšali ravnotežu i smanjili rizik od ozljeda.',
      },
      {
        title: 'Koordinacija i funkcionalna mobilnost',
        icon: 'tabler:walk',
        description:
          "Precizni obrasci kretanja podižu tjelesnu svijest i koordinaciju — pogodno za rekreativce, sportaše i oporavak.",
      },
    ]}
    image={{
      src: '~/assets/images/ob-4.jpg',
      alt: 'funkcionalni image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-xl font-bold tracking-tight dark:text-white sm:text-3xl mb-1">Funkcionalni trening</h3>
      Funkcionalni trening fokusira se na vježbe koje oponašaju prirodne pokrete tijela i svakodnevne aktivnosti, poput 
      dizanja, savijanja, okretanja i hodanja. Cilj je povećati snagu, ravnotežu, fleksibilnost i koordinaciju kako bi 
      tijelo bilo spremnije za svakodnevne izazove.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-amber-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Note icon="tabler:stretching" description=`Stručni tim možete pogledati <a href="${getPermalink('/treneri')}" class=\"font-bold text-violet-500 dark:text-slate-300 hover:text-primary dark:hover:text-gray-200\">ovdje</a>` />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Vaš put do prvog termina"
    items={[
      {
        title: 'Korak 1: <span class="font-medium">Prijavite se ili izradite račun</span>',
        description:
          `Već imate račun? <a target=\"_blank\" href="${loginLink}" class=\"font-bold text-violet-500 dark:text-slate-300 hover:text-primary dark:hover:text-gray-200\">Prijavite se</a>. Novi ste? <a target=\"_blank\" href="${registrationLink}" class=\"font-bold text-violet-500 dark:text-slate-300 hover:text-primary dark:hover:text-gray-200\">Registrirajte se</a><br>Prijava traje manje od minute.`,
        icon: 'tabler:login',
      },
      {
        title: 'Korak 2: <span class="font-medium">Odaberite program</span>',
        description:
          "Pilates, Reformer, funkcionalni ili kineziološki — izaberite ono što najbolje odgovara vašim ciljevima.",
        icon: 'tabler:adjustments-alt',
      },
      {
        title: 'Korak 3: <span class="font-medium">Pregledajte raspored</span>',
        description:
          `Pregledajte slobodne termine u <a target=\"_blank\" href="${classLink}" class=\"font-bold text-violet-500 dark:text-slate-300 hover:text-primary dark:hover:text-gray-200\">rasporedu</a>, upoznajte <a href="${getPermalink('/treneri')}" class=\"font-bold text-violet-500 dark:text-slate-300 hover:text-primary dark:hover:text-gray-200\">trenere</a> i odaberite onaj koji vam najviše odgovara.`,
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Rezervirajte i dođite',
        description:
          'Potvrdite rezervaciju i dođite 10 minuta ranije — za ostalo ćemo se pobrinuti mi',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/ob-5.jpg',
      alt: 'prijava image',
    }}
  />


  <!-- Note Widget ******************* -->

  <Note icon="tabler:currency-euro" description=`Cjenik usluga mozete pogledati <a href="${getPermalink('/cjenik')}" class=\"font-bold text-violet-500 dark:text-slate-300 hover:text-primary dark:hover:text-gray-200\">ovdje</a>` />

  <Features2
    title="Kontakt & Lokacija"
    items={[
      {
        title: 'Mobitel',
        description: '+385 95 518 3850',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'info.optimalbody@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Lokacija',
        description: 'Nikole Tavelića 4, Split',
        icon: 'tabler:map-pin',
      },
    ]}
  >
  <!--  <Fragment slot="bg">-->
  <!--    <div class="absolute inset-0 bg-sky-50 dark:bg-transparent"></div>-->
  <!--  </Fragment>-->
  </Features2>
</Layout>
